*
	box-sizing: border-box
	font-family: "Nunito", sans-serif

html, body, #reactroot, #main
	width: 100%
	height: 100%
	padding: 0px
	margin 0px

ol, ul, li
	margin: 0px
	padding: 0px
	list-style: none

#main
	padding: 20px 40px
	position: relative

	#searchbox
		display: flex

		img
			opacity: 0.6

		input
			outline: none

		input::placeholder
			opacity: 0.6

	#searchbox.big
		width: 100%
		height: 100%
		padding: 50px 100px
		align-items: center
		justify-content: center

		img
			height: 130px
			padding-right: 20px

		.wrapper
			width: 100%

			input
				width: 100%
				font-size: 20px
				padding: 5px 10px
				margin-bottom: 45px

			#loading
				display: none

	#searchbox.small
		align-items: center
		justify-content: center

		img
			height: 70px
			padding-right: 10px

		.wrapper
			flex-grow: 1
			position: relative
			overflow-x: hidden

			input
				width: 100%
				padding: 5px 10px
				margin-bottom: 25px

			#loading.on
				bottom: 18px
				left: 0px
				height: 4px
				width: 100%
				display: block
				position: absolute
				background-color: #0b97c4

				animation-duration: 5s
				animation-name: slidein
				animation-direction: alternate
				animation-iteration-count: infinite

	.noresults
		padding: 50px
		font-size: 20px
		text-align: center

	#results
		padding: 20px

		li
			margin-bottom: 50px

			.header
				clear: both
				overflow: auto
				font-size: 18px
				margin-bottom: 10px
				border-bottom: 1px solid #8e908c

				.title
					float: left
					font-weight: bold

				.buy
					float: right

					a
						color: #ca1e7a
						margin-right: 5px
						text-decoration: none

					a:hover
						color: #0b97c4

					.price
						font-size: 13px

	#purchasedata
		top: 20%
		left: 20%
		right: 20%
		bottom: 20%

		padding: 10px
		display: flex
		font-size: 18px
		position: absolute
		flex-direction: column
		border: 2px solid black
		background-color: #ffffff

		animation-duration: 2s
		animation-name: showdialog

		> *
			visibility: hidden

		.header
			padding-bottom: 10px

		textarea
			flex-grow: 1
			outline: none
			padding: 10px
			font-size: 16px

		.actions
			clear: both
			overflow: auto
			padding-top: 10px

			li
				float: right

				a
					color: #ca1e7a
					text-decoration: none

				a:hover
					color: #0b97c4

			li:first-child
				float: left

	#purchasedata.done
		> *
			visibility: visible

@keyframes slidein
	from
		left: -100%

	to
		left: 100%

@keyframes showdialog
	from
		top: 50%
		left: 50%
		right: 50%
		bottom: 50%

	to
		top: 20%
		left: 20%
		right: 20%
		bottom: 20%
