*
	box-sizing: border-box
	font-family: "Nunito", sans-serif

html, body, #reactroot, #main
	width: 100%
	height: 100%
	padding: 0px
	margin 0px

ol, ul, li
	margin: 0px
	padding: 0px
	list-style: none

#main
	padding: 20px 40px

	#searchbox
		display: flex

		transition-property: width, height
		transition-duration: 20s
		transition-delay: 2s

		img
			opacity: 0.6

		input
			outline: none

		input::placeholder
			opacity: 0.6

	#searchbox.big
		width: 100%
		height: 100%
		padding: 50px 100px
		align-items: center
		justify-content: center

		img
			height: 130px
			padding-right: 20px

		input
			width: 100%
			font-size: 20px
			padding: 5px 10px
			margin-bottom: 45px

	#searchbox.small
		align-items: center
		justify-content: center

		img
			height: 70px
			padding-right: 10px

		input
			flex-grow: 1
			padding: 5px 10px
			margin-bottom: 25px

	#results
		padding: 20px

		li
			margin-bottom: 20px

			.header
				font-size: 16px
				margin-bottom: 6px
				border-bottom: 1px solid #8e908c

				.price
					margin-left: 5px
					font-size: 14px

					.wei
						margin-left: 3px
